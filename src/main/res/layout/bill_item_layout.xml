<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<LinearLayout
    android:layout_marginLeft="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:textStyle="bold"
        android:id="@+id/tvkeycart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã đơn hàng" />

    <TextView
        android:textStyle="normal"
        android:textColor="@android:color/black"
        android:id="@+id/tvdateput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày đặt" />

    <TextView
        android:textStyle="normal"
        android:textColor="@android:color/black"
        android:id="@+id/tvdatepay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày thanh toán" />

    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvsumprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Sum price"
            android:textColor="@color/red"
            android:textSize="20sp" />

        <TextView
            android:textStyle="italic"
            android:id="@+id/tvstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="State"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="15sp" />
        <TextView
            android:textColor="@color/blue"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="Hủy đơn hàng"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/tvdeleteorder"
            android:layout_below="@id/tvstate"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"/>
    </RelativeLayout>

</LinearLayout>
</android.support.design.widget.CoordinatorLayout>