<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_image_small"
        android:layout_marginBottom="@dimen/spinner_margin"
        android:layout_marginLeft="@dimen/detail_bill_margin"
        android:layout_marginTop="@dimen/spinner_margin"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/size_image_small"
            android:layout_height="@dimen/size_image_small"
            android:scaleType="fitXY"
            android:src="@drawable/ic_cart_active" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/spinner_margin"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvnameproduct"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/name_product"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvprice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/price"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tvnumber"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/number"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />

        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>