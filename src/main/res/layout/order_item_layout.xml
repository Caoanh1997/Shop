<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_image_cart"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/spinner_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/size_image_cart"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_refresh" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/size_image_cart"
                android:layout_weight="70"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvnameproduct"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name_product"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small_title" />

                <TextView
                    android:id="@+id/tvnumber"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spinner_margin"
                    android:text="@string/number" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvsumprice"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="30"
                android:text="@string/sum_price"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_item"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>