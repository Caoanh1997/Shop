<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_image_cart"
    android:layout_margin="@dimen/spinner_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivstore"
        android:layout_width="@dimen/width_size_store"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/state_home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/spinner_margin"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:id="@+id/tvname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/address"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_item"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/phone"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_item"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>
